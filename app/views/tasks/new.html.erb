<h1>Nueva tarea</h1>

<%= form_with(model: @task, local: true) do |form| %>
<div>
  <%= form.label :title%>
  <%= form.text_field :title%>
</div>
<div>
  <%= form.label :description%>
  <%= form.text_field :description%>
</div>
<div>
  <%= form.label :completed%>
  <%= form.check_box :completed%>
</div>
<div>
  <%= form.submit "Crear tarea"%>
</div>
<%end%>

<% if @task.errors.any? %>
<ul>
  <%= @task.errors.full.message.each do |message|%>
  <li><%= message %></li>
  <%end%>
</ul>
<%end%>

